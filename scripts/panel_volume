#!/bin/bash

VOL=`amixer get Master | awk 'FNR == 5 {print $4}' | tr -d '[]%'`

icon=""
if [[ $VOL -lt 1 ]]; then
	icon=""
else
	icon=""
fi

bar=""
case $VOL in
	100)
		bar="---------"
		;;
	[0-5])
		bar="\f8---------"
		;;
	[5-9])
		bar="\f3-\f8--------"
		;;
	[1-2]*)
		bar="--\f8-------"
		;;
	3*)
		bar="---\f8------"
		;;
	4*)
		bar="----\f8-----"
		;;
	5*)
		bar="-----\f8----"
		;;
	6*)
		bar="------\f8---"
		;;
	7*)
		bar="-------\f8--"
		;;
	8*)
		bar="--------\f8-"
		;;
	*)
		bar="---------"
		;;
esac

echo "$icon \f9$bar"
